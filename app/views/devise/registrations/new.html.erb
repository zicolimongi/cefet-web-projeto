
<div class="row">
  <div class="col-xs-12 col-md-4 col-md-offset-4">
    <h2>Cadastro</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "form-vertical") do |f| %>

      <% if !devise_error_messages!.blank? %>
        <div class="alert alert-danger">
          <%= devise_error_messages! %>
        </div>
      <% end -%>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class: "form-control", required: true %>
      </div>

      <div class="form-group">
        <%= f.label "Senha" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control", required: true, minlength: 6 %>
      </div>

      <div class="form-group">
        <%= f.label "Confirme sua senha" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", required: true, minlength: 6 %>
      </div>

      <div class="actions">
        <%= f.submit "Cadastrar", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %></div>
  </div>
