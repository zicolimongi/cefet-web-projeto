<div class="row">
  <div class="col-xs-12 col-md-4 col-md-offset-4">
    <h2>Altere sua senha</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, class: "form-vertical") do |f| %>

      <% if !devise_error_messages!.blank? %>
        <div class="alert alert-danger">
          <%= devise_error_messages! %>
        </div>
      <% end -%>

      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password, "Nova Senha" %><br />
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <br>
        <%= f.password_field :password, autofocus: true, autocomplete: "off", required: true, class: "form-control", minlength: 6 %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirme sua nova senha" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", required: true, class: "form-control", minlength: 6 %>
      </div>

      <div class="actions">
        <%= f.submit "Alterar minha senha", class: "btn btn-default" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
