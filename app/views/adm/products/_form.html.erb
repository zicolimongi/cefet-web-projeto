<%= form_for([:adm, @product], class: "form-vertical") do |f| %>
  <% if @product.errors.any? %>
    <div class="alert alert-danger">
      <h3><%= pluralize(@product.errors.count, "error") %> impediram que o produto fosse armazenado:</h3>

      <ul>
        <% @product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label "Nome" %><br>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>
  <div class="form-group">
    <%= f.label "Descrição" %><br>
    <%= f.text_area :description, class: "form-control", required: true %>
  </div>
  <div class="form-group">
    <%= f.label "Preço" %><br>
    <%= f.number_field :price, class: "form-control", required: true, min: 0 %>
  </div>
  <div class="form-group">
    <%= f.label "Link da imagem" %><br>
    <%= f.text_field :image_link, class: "form-control", required: true %>
  </div>
  <div class="form-group">
    <%= f.submit "Salvar", class: "btn btn-success pull-right" %>
  </div>
<% end %>
