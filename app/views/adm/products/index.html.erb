<div class="row">
  <div class="col-xs-12">
    <h1>Lista dos produtos</h1>

    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Descrição</th>
          <th>Preço</th>
          <th>Ações</th>
        </tr>
      </thead>

      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.description.truncate(30) %></td>
            <td><%= product.price %></td>
            <td>
              <div class="btn-group btn-group-xs" role="group">
                <%= link_to 'Mostrar', [:adm,product], class: "btn btn-default" %>
                <%= link_to 'Editar', edit_adm_product_path(product), class: "btn btn-default" %>
                <%= link_to 'Excluir', [:adm,product], method: :delete, data: { confirm: 'Você tem certeza?' }, class: "btn btn-danger" %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Novo Produto', new_adm_product_path, class: "pull-right btn btn-primary" %>
  </div>
</div>
